{
  "name": "kitsu",
  "version": "1.3.0",
  "description": "Promise based NodeJS API wrapper for Kitsu.io",
  "license": "MIT",
  "author": "James Harris <wopian@wopian.me>",
  "main": "lib/kitsu.js",
  "module": "lib/kitsu.mjs",
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "test": "jest --coverage",
    "docs": "documentation build src/index.js -f md -o DOCS.md --sort-order source",
    "build": "yarn docs && yarn rollup",
    "release:build": "jest && yarn build",
    "release:push": "git push origin && git push origin --tags && npm publish && git stash pop",
    "release:commit": "git add package.json && git add DOCS.md && git add CHANGELOG.md && git commit -m \"update changelog\" && git stash",
    "release:major": "yarn release:build && changelog -M && yarn release:commit && npm version major && yarn release:push",
    "release:minor": "yarn release:build && changelog -m && yarn release:commit && npm version minor && yarn release:push",
    "release:patch": "yarn release:build && changelog -p && yarn release:commit && npm version patch && yarn release:push",
    "rollup": "cross-env NODE_ENV=production rollup -c --environment BUILD:production",
    "start": "yarn example:basic",
    "example:basic": "node ./example/basic",
    "example:async": "babel-node ./example/async",
    "example:auth": "babel-node ./example/auth"
  },
  "keywords": [
    "kitsu",
    "anime",
    "manga",
    "drama",
    "oauth2",
    "authentication",
    "api",
    "wrapper",
    "client",
    "jsonapi",
    "json-api",
    "serialize",
    "deserialize"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wopian/kitsu.git"
  },
  "bugs": {
    "url": "https://github.com/wopian/kitsu/issues"
  },
  "homepage": "https://github.com/wopian/kitsu#readme",
  "files": [
    "lib",
    "DOCS.md"
  ],
  "dependencies": {
    "babel-runtime": "~6.23.0",
    "camelcase": "~4.1.0",
    "client-oauth2": "~4.1.0",
    "decamelize": "~1.2.0",
    "got": "~7.1.0",
    "pluralize": "~5.0.0"
  },
  "devDependencies": {
    "babel-cli": "~6.24.1",
    "babel-core": "~6.25.0",
    "babel-eslint": "~7.2.3",
    "babel-plugin-transform-runtime": "~6.23.0",
    "babel-preset-env": "~1.6.0",
    "babel-preset-stage-0": "~6.24.1",
    "cross-env": "~5.0.1",
    "documentation": "~4.0.0-rc.1",
    "eslint": "~4.2.0",
    "generate-changelog": "~1.3.0",
    "jest": "~20.0.4",
    "js-beautify": "~1.6.14",
    "rollup": "~0.45.0",
    "rollup-plugin-babel": "~2.7.1",
    "rollup-plugin-babili": "~3.1.0",
    "rollup-plugin-cleanup": "^1.0.1",
    "rollup-plugin-json": "~2.3.0",
    "standard": "~10.0.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageDirectory": "<rootDir>/test/coverage",
    "moduleNameMapper": {
      "^kitsu(.*)$": "<rootDir>/src/$1",
      "^pkg$": "<rootDir>/package.json"
    }
  }
}
