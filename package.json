{
  "name": "kitsu-monorepo",
  "private": true,
  "type": "module",
  "homepage": "https://github.com/wopian/kitsu#readme",
  "repository": "https://github.com/wopian/kitsu",
  "bugs": {
    "url": "https://github.com/wopian/kitsu/issues"
  },
  "engines": {
    "node": ">= 16"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -pt run build",
    "lint": "eslint . --ext .js,.cjs,.mjs,.ts,.cts,.mts --fix --ignore-path .gitignore",
    "lint:ci": "eslint . --ext .js,.cjs,.mjs,.ts,.cts,.mts --ignore-path .gitignore",
    "test": "ava",
    "coverage": "c8 ava",
    "document": "typedoc src/index.ts --name preferred-locale --includeVersion --hideGenerator --searchInComments --plugin @mxssfd/typedoc-theme --theme my-theme --entryPointStrategy expand"
  },
  "ava": {
    "utilizeParallelBuilds": true,
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader",
      "tsx"
    ]
  },
  "c8": {
    "all": true,
    "skipFull": true,
    "src": [
      "dist"
    ],
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ]
  },
  "renovate": {
    "extends": [
      "github>wopian/renovate-config",
      ":pathSemanticCommitType(packages/kitsu/**,build(kitsu))",
      ":pathSemanticCommitType(packages/kitsu-core/**,build(kitsu-core))"
    ]
  },
  "packageManager": "yarn@3.3.1",
  "devDependencies": {
    "@ava/typescript": "~3.0.1",
    "@mxssfd/typedoc-theme": "~1.0.3",
    "@rushstack/eslint-patch": "~1.2.0",
    "@semantic-release/changelog": "~6.0.2",
    "@semantic-release/commit-analyzer": "~9.0.2",
    "@semantic-release/github": "~8.0.7",
    "@semantic-release/npm": "~9.0.2",
    "@semantic-release/release-notes-generator": "~10.0.3",
    "@typescript-eslint/eslint-plugin": "~5.52.0",
    "@typescript-eslint/parser": "~5.52.0",
    "ava": "~5.2.0",
    "c8": "~7.13.0",
    "eslint": "~8.34.0",
    "eslint-config-prettier": "~8.6.0",
    "eslint-plugin-import": "~2.27.5",
    "eslint-plugin-prettier": "~4.2.1",
    "eslint-plugin-simple-import-sort": "~10.0.0",
    "eslint-plugin-unicorn": "~45.0.2",
    "prettier": "~2.8.4",
    "rimraf": "~4.1.2",
    "semantic-release": "~20.1.0",
    "tsx": "~3.12.3",
    "typedoc": "~0.23.25",
    "typescript": "~4.9.5"
  },
  "dependenciesMeta": {
    "esbuild": {
      "built": true
    }
  }
}
